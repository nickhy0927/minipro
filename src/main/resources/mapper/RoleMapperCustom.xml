<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iss.platform.role.mapper.RoleMapperCustom">
	<resultMap id="BaseResultMap" type="com.iss.platform.role.pojo.Role">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="p_id" property="pId" />
		<result column="status" property="status" />
		<result column="remark" property="remark" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="delete_time" property="deleteTime" />
	</resultMap>
	<select id="queryRoleById" resultType="java.util.Map" parameterType="String">
		select * from t_p_role t where t.id = #{id}
	</select>
</mapper>